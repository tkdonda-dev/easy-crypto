{
  "name": "@tkdonda/easy-crypto",
  "version": "1.0.0",
  "description": "Universal encryption library with zero dependencies. Works on Node.js, Web browsers, React, React Native, and Expo. Simple password encryption, decryption, and hashing.",
  "license": "Unlicense",
  "main": "src/index.js",
  "browser": "src/index.js",
  "react-native": "src/index.js",
  "exports": {
    "./utils/pbkdf2": {
      "browser": "./src/utils/pbkdf2-browser.js",
      "import": "./src/utils/pbkdf2-node.js",
      "require": "./src/utils/pbkdf2-node.js",
      "default": "./src/utils/pbkdf2-node.js"
    },
    "./utils/randomBytes": {
      "browser": "./src/utils/random-browser.js",
      "import": "./src/utils/random-node.js",
      "require": "./src/utils/random-node.js",
      "default": "./src/utils/random-node.js"
    }
  },
  "keywords": [
    "encryption",
    "decryption",
    "crypto",
    "security",
    "password-hashing",
    "cross-platform",
    "node.js",
    "react",
    "react-native",
    "expo",
    "tweetnacl",
    "zero-dependencies",
    "easy-crypto",
    "universal"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  }
}
